{% extends 'base.html.twig' %}

{% set current_title = "boutique" %}

{% block body %}
    <section class="section text-center ">
        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-md-12 p-0">
                    <div class="breadcrumb-wrapper p-4 color-gold">
                        <ol class="breadcrumbs-custom">
                            <li><a href="./">Home</a></li>
                            <li><a href="/boutique">Boutique</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
<section class="section section-lg bg-default">
    <div class="container text-center">
        <div class="row row-30 text-left">
            <div class="col-md-3">
                <h2 class="fs-40 Benne-Regular ">Filter par prix</h2>
                <div class="barre mb-3"></div>
                <input type="number" min="0" max="100" step="1" placeholder="prix min" class="form-input mb-2 text-center fs-18">
                <input type="number" min="0" max="100" step="1" placeholder="prix max" class="form-input text-center fs-18">
                <button class="button button-primary mt-3" style="width: 100%;" href="#">Rechercher</button>



                <h2 class="fs-40 Benne-Regular mt-4">Catégorie</h2>
                <div class="barre mb-3"></div>
                <div class="d-flex justify-content-between">
                    <ul class="list-marked list-menu-aside text-primary font-weight-bold list-shop-filter">
                        <li><a class="active" href="#">Baguette </a><span> (3)</span></li>
                        <li><a href="#">Vétement & Assessoires </a><span> (2)</span></li>
                        <li><a href="#">Figurines &  collectors </a><span> (6)</span></li>
                        <li><a href="#">Maison & décoration </a> <span>(10)</span></li>
                        <li><a href="#">Jeux & jouet </a> <span>(0)</span></li>
                        <li><a href="#">Papeterie </a> <span>(3)</span></li>
                        <li><a href="#">Livres </a> <span>(4)</span></li>
                        <li><a href="#">Tout </a> <span>(20)</span></li>
                    </ul>
                </div>

            </div>
            <div class="col-md-9">
                <div class="product-top-panel group-md">
                    <p class="product-top-panel-title"></p>
                    <div data-select2-id="5">
                        <div class="group-sm group-middle">
                            <div data-select2-id="4">
                                <select class="select2 select2-hidden-accessible form-select" id="filterSelect" style="width:250px;" data-select2-id="filterSelect" tabindex="-1" aria-hidden="true">
                                    <option value="order" data-select2-id="2">Trier par pertinence</option>
                                    <option value="priceAsc" data-select2-id="13">Trier par prix croissant</option>
                                    <option value="priceDesc" data-select2-id="14">Trier par prix decroissant</option>
                                    <option value="nameAsc" data-select2-id="15">Trier de A à Z</option>
                                    <option value="nameDesc" data-select2-id="16">Trier de Z à A</option>
                                </select></div>
                        </div>
                    </div>
                </div>
                <div class="row row-50">
                    {% for prod in produits %}
                        <div class="col-sm-6 col-lg-4">
                        <div class="price-box text-center">
                            <div class="figure">
                                <a href="/produit?id={{ prod.prId }}">
                                    <img src="{{ prod.images.count > 0 ? prod.images[0].piImg : '' }}" alt="" style="height: 210px;width: auto;"/></a></div>
                            <div class="caption">
                                <div class="title"><a href="/produit?id={{ prod.prId }}">{{ prod.prTitre }}</a></div>
                                <p class="price"> <chiffre>{{ prod.prPrix}}</chiffre> € TTC</p><a class="button button-primary" href="#">Acheter</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    <div class="col-md-12 arvo">
                        <ul class="pagination-custom text-center">
                            <li class="disabled"><a class="pager-custom pager-prev" href="#"></a></li>
                            <li class="active"><span>01</span></li>
                            <li><a href="#">02</a></li>
                            <li><a href="#">03</a></li>
                            <li><a href="#">04</a></li>
                            <li><a href="#">05</a></li>
                            <li><a class="pager-custom pager-next" href="#"></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
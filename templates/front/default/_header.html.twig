<header class="section page-header">
    <!-- RD Navbar-->
    <div class="rd-navbar-wrap">
        <nav class="rd-navbar rd-navbar-default" data-sm-stick-up-offset="1px" data-md-stick-up-offset="79px" data-lg-stick-up-offset="1px" data-layout="rd-navbar-fixed" data-sm-layout="rd-navbar-fixed" data-md-layout="rd-navbar-fixed" data-lg-layout="rd-navbar-fullwidth" data-xl-layout="rd-navbar-static" data-xxl-layout="rd-navbar-static" data-lg-device-layout="rd-navbar-static" data-xl-device-layout="rd-navbar-static" data-xxl-device-layout="rd-navbar-static" data-sm-stick-up="true" data-md-stick-up="true" data-lg-stick-up="true" data-xl-stick-up="true" data-xxl-stick-up="true">
            <div class="rd-navbar-outer">
                <div class="rd-navbar-inner">
                    <!-- RD Navbar Panel-->
                    <div class="rd-navbar-cell rd-navbar-panel">
                        <!-- RD Navbar Toggle-->
                        <button class="rd-navbar-toggle" data-rd-navbar-toggle=".rd-navbar-nav"><span class="toggle-icon"></span></button>
                        <!-- RD Navbar Brand--><a class="rd-navbar-brand" href="../..">
                            <img class="brand-normal" src="/images/logo-black.png" alt="" width="186" height="130"/>
                            <img class="brand-mini" src="/images/logo-black.png" alt="" width="186" height="104"/></a>
                    </div>
                    <!-- RD Navbar Nav-->
                    <div class="rd-navbar-cell rd-navbar-nav-wrap">
                        <!-- RD Navbar Nav-->
                        <div class="d-flex justify-content-between mb-3 menu-petit">
                            <div>

                                <form class="text-left rd-mailform-inline rd-mailform-icon" method="post" action="/boutique" >
                                    <div class="form-wrap">
                                        <label class="form-label rd-input-label fs-18" for="recherche">Rechercher un produit</label>
                                        <input class="form-input form-control-has-validation" id="recherche" type="text" name="search">
                                        <button class="button recherche" type="submit"><div class="btn-recherche"></div></button>
                                    </div>
                                </form>
                            </div>

                            <p class="text-right mt-3 fs-18" style="color: black">-Livraison offerte à partir de 70€ d'achat-</p>
                            <ul class="list-inline list-inline-sm mt-3 text-right">
                                <li>
                                    <a href="/membre" class="fs-18 "><div class="btn-compte d-inline-block"></div>Compte</a>
                                </li>
                                {% if app.user is not null %}
                                <li>
                                    <a href="/logout" class="fs-18">  <div class="btn-deconnexion d-inline-block"></div> Déconnexion</a>
                                </li>
                                {% endif %}
                                <li>
                                    <a href="/panier" class="fs-18"> <div class="btn-panier d-inline-block"></div>
                                        <span class="cart-btn-count" id="cart-btn-count" style="
                                           top: 25px;
                                            right: 53px;
                                            font-size: 12px;
                                            font-weight: 600;
                                            letter-spacing: 0;
                                            color: #000000;
                                            border: 1px solid #ffffff;
                                            border-radius: 100%;
                                            padding: 0px 9px 0 9px;
                                            background-color: #f3c13c;
                                        ">{{ app.session.get('panier') != null ? app.session.get('panier') : 0 }}</span> Panier</a>
                                </li>
                            </ul>
                        </div>
                        <ul class="rd-navbar-nav d-flex2 wrap ">
                            {%  for cat in categories %}
                                <li><a href="{{ path('boutiqueCat',{'cat':cat.caSeoUrl}) }}">{{ cat.caTitre }}</a>
                                    <!-- RD Navbar Dropdown-->
                                    {% if not (cat.souscats is empty) %}
                                        <ul class="rd-navbar-dropdown">
                                            {% for ssCat in cat.souscats %}
                                                <li><a href="{{ path('boutiqueSousCat',{'cat':cat.caSeoUrl,'sscat':ssCat.caSeoUrl}) }}">{{ ssCat.caTitre }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <!-- RD Navbar Panel Right-->
                    <!-- Collapse toggle-->
                    <button class="collapse-toggle" data-rd-navbar-toggle=".rd-navbar-panel-right"><span class="toggle-icon"></span></button>
                    <div class="rd-navbar-cell rd-navbar-panel-right visible-petit">
                        <!-- Social-->
                        <div class="rd-navbar-social"></a><a class="link fa fa-facebook" href="#"></a><a class="link fa fa-instagram" href="#"><a class="link fa fa-twitter" href="#"></a><a class="link fa fa-youtube" href="#"></a></div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>

